---
import Container from "./Container.astro";
import Topic from "./Topic.astro";
import teamData from './Data/team.json';
import Collapse from './Collapse.astro';

const firstThreeMembers = teamData.team.slice(0, 3); // Obtener solo los tres primeros miembros del equipo
---
<Container>
    <div class="relative flex flex-col items-center md:flex-row">
        <Topic title="Process" description="Step-by-Step Guide to Achieving Your Business Goals"/>
    </div>

    <div class="my-6">
        <div class="space-y-10">
            {
            teamData.process.map((process, key) => (
                <Collapse label={process.label} index={key + 1}>
                {process.content}
                </Collapse>
            ))
            }
        </div>
    </div>
    <div class="relative flex flex-col items-center md:flex-row">
        <Topic title="Equipo" description="Equipo de Evelin Garay"/>
    </div>

    <div class="flex-row items-center py-5" id="team">
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-1 md:grid-cols-3">
            {
            firstThreeMembers.map(({ title, description, name, link, profile}, index) => (
                <div class="h-[331px] px-[35px] py-10 bg-white rounded-[45px] shadow-card border border-zinc-900 flex-col justify-start items-start gap-2.5 inline-flex text-black">
                    <div class="flex flex-col items-start justify-start gap-7">
                        <div class="inline-flex items-start self-stretch justify-start">
                            <div class="flex items-center justify-start gap-8 grow shrink basis-0">
                                <div class="h-[102.82px] w-[102.82px] rounded-[50%] overflow-hidden relative"> {/* Estilo para mantener las im√°genes cuadradas y con bordes redondeados */}
                                    <img class="object-cover w-full h-full" src={profile} alt={name}/> {/* Ajuste para cubrir completamente el contenedor */}
                                </div>
                                <div class="inline-flex flex-col items-start justify-end">
                                    <div class="text-lg font-normal">{title}</div>
                                    <div class="text-xl font-medium">{name}</div>
                                </div>
                            </div>
                            <a class="top-0 right-0 w-10 h-10" href={link}>
                                <img src="/favicon.png" alt="vector"/>
                            </a>
                        </div>
                        <hr class="w-full border border-black"/>
                        <p class="text-sm md:text-lg">{description}</p>
                    </div>
                </div>
            ))
            }
        </div>
    </div>
    <div class="inline-flex items-center justify-center w-full md:justify-end">
        <a href="/team">
            <button class="px-8 py-5 text-xl font-normal leading-7 text-center text-white border bg-zinc-900 hover:bg-white rounded-2xl hover:text-black">Ver todo el equipo
            </button>
        </a>
    </div>

</Container>;
