---
const { label, index = null } = Astro.props;
---

<div class="outline-none group accordion-section" tabindex="1">
  <div class="relative flex items-center justify-between px-4 py-3 pr-10 transition-colors duration-500 cursor-pointer group group-focus:bg-lime group-focus:shadow-none shadow-card bg-zinc-100 group-focus:rounded-b-none group-focus:rounded-t-3xl rounded-3xl ease">
    <div class="flex items-center w-full px-10 pt-10 transition duration-500 group-focus:text-zinc-900 ease">
      <div class="flex items-center w-full gap-5 pb-10">
        <div class="flex items-center justify-between w-full rouded-full">
          <div class="flex items-center gap-5">
            {
              index && (
                <>
                  <p class="flex items-center text-6xl font-medium">
                    {index}
                  </p>
                  <p class="text-lg lg:text-3xl">{label}</p>
                </>
              )
            }
          </div>
          <div class="rounded-full after:h-[2px] relative accodion-chevron border-black md:border-2 flex md:items-center md:bg-zinc-100 h-12 w-12"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
  <div
    class="px-4 overflow-hidden transition duration-500 group-focus:max-h-screen max-h-0 shadow-card rounded-b-3xl bg-zinc-100 group-focus:bg-lime ease"
  >
    <p class="p-10 text-justify text-zinc-800">
      <slot />
    </p>
  </div>
</div>

<style>
    .accodion-chevron::after{
        content: "";
        @apply h-[70%] w-[8px] transform transition-transform bg-black absolute left-1/2 -translate-x-1/2;
    }
    .accodion-chevron::before{
        content: "";
        @apply h-[70%] w-[8px] rotate-90 transform bg-black absolute left-1/2 -translate-x-1/2;
    }
    .group:focus-within .accodion-chevron::after {
        @apply rotate-90;
    }
</style>